<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%date{yyyy-MM-dd HH:mm:ss.SSS} [%yellow(%thread)] %highlight(%level) %cyan(%logger) %message%n</pattern>
        </encoder>
    </appender>

    <logger name="org.apache.pekko.kafka" level="info"/>
    <logger name="org.apache.kafka" level="info"/>
    <logger name="com.datastax.oss" level="info"/>

    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>